<% include includes/header.ejs %>
  
   <div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-image hoverable">
          <img src="/images/banner.jpg" alt="vinyl-banner">
          <span class="card-title"><h1>Vinyl</h1></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s1 m4">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title">Records</span>
            <% albums.forEach(function(album) { %>
              <div>
                <div class="card-action">
                  <a href="/albums/<%= album.id %>">
                    <%= album.title %> -- <%= album.artist %>
                  </a>
                </div>
              </div>
            <% }) %>
        </div>
      </div>
    </div>
    <div class="col s1 m8">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title">Recent Reviews</span>
            <% reviews.forEach(function(review) { %>
              <div>
                <div class="card-action">
                  <a href="/albums/<%= review.album_id %>">
                    <%= review.album_title %> -- <%= review.album_artist %>
                  </a>
                  <span class="right"><%= review.creation_date %></span>
                </div>
                <div class="card-content">
                  <p>
                    <%= review.review_body %>
                    <br>
                    <span class="right">
                      -- <a href="/users/<%= review.reviewer_id %>"><%= review.reviewer %></a>
                    </span>
                  </p>
                </div>
              </div>
            <% }) %>
        </div>
      </div>
    </div>
  </div>

<% include includes/footer.ejs %>
