<% include includes/header.ejs %>
  
   <div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-image hoverable">
          <img src="/images/banner.jpg" alt="vinyl-banner">
          <span class="card-title"><h1>Vinyl</h1></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s1 m4">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title">Records</span>
            <% albums.forEach(function(album) { %>
              <div>
                <div class="card-action">
                  <a href="/albums/<%= album.id %>"><%= album.title %></a>
                  <span>by <%= album.artist %></span>
                </div>
              </div>
            <% }) %>
        </div>
      </div>
    </div>
    <div class="col s1 m8">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title">Recent Reviews</span>
            <% albums.forEach(function(album) { %>
              <div>
                <div class="card-action">
                  <a href="/albums/<%= album.id %>"><%= album.title %></a>
                  <span>by <%= album.artist %></span>
                </div>
              </div>
            <% }) %>
        </div>
      </div>
    </div>
  </div>


<% include includes/footer.ejs %>
