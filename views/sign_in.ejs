<% include includes/header.ejs %>

    <div class="container">
      <div class="row center">
        <h1>Sign In</h1>
      </div>
      <div class="row">
        <form action="/users/sign_in" method="post" class="col s12 offset-s3">
        <div class="row">
          <div class="input-field col s7">
            <input id="enter_email" type="email" name="email" required>
            <label for="enter_email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s7">
            <input id="enter_password" type="password" name="password"required>
            <label for="enter_password">Password</label>
          </div>
        </div>
        <% if (signInError) { %>
          <div class="row">
            <div class="col s3">
              <%= signInError %>
            </div>
          </div>
        <% } %>
        <div class="row">
          <div class="input-field col s2">
            <button class="btn waves-effect waves-light" type="submit">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </form>  
      </div>
      
    </div>

<% include includes/footer.ejs %>

