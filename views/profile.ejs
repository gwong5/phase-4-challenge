<% include includes/header.ejs %>

<h1><%= member.name %></h1>
<div>
  <img src="<%=member.avatar_url%>" alt="Profile pic">
  <% if (member.id === user.id) { %>
    <form>
      <input type="text" name="avatar_url" placeholder="enter avatar url">
      <input type="submit" value="update">
    </form>
  <% } %>
  <div>
    Email: <%= member.email %>  
  </div>
  <div>
    Date Joined: <%= member.join_date %>
  </div>
  <% if (reviews) { %>
    <% reviews.forEach((review) => { %>
      <<div>
      <span><%= review.review_created %></span>
      <span><%= review.review_body %></span>
      </div>
    <% }) %>
  <% } else { %>
    <div>
      User has not left any reviews yet
    </div>
  <% } %>
</div>
<div>
  <% %>
</div>

<% include includes/footer.ejs %>
