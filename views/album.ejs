<% include includes/header.ejs %>

  <div class="container">
    <div class="row">
      <h1><%= album.title %></h1>
      <em>by <%= album.artist %></em>
    </div>
    <div class="row">
      <h3>Reviews</h3>
      <% if (user) { %>
        <a class="waves-effect waves-light btn" href="/albums/<%= album.id %>/new_review">Add a review</a>
      <% } %>
    <ul class="collection">
      <% if (reviews.length > 0) { %>
        <% reviews.forEach((review) => { %>
          <li class="collection-item avatar">
            <img alt="user avatar" class="circle">
            <span class="title">
              <a href="/users/<%= review.reviewer_id %>"><%= review.reviewer  %></a>
            </span>
            <p>
              <%= review.creation_date %><br>
              <%= review.review_body %>
            </p>
          </li>
        <% }) %>
      <% } else { %>
        <li class="collection-item">
          <h5>There are no reviews for this album yet</h5>
        </li>
      <% } %>
    </div>
  </div>

<% include includes/footer.ejs %>
