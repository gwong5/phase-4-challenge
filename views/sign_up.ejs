   <div class="container">
    <div class="row center">
      <h1>Sign up for Vinyl</h1>
    </div>
    <div class="row">
      <form action="/users/sign_up" method="post" class="col s12 offset-s3">
        <div class="row">
          <div class="input-field col s7">
            <input id="enter_name" type="text" name="name" required>
            <label for="enter_name">Name</label>
          </div>
          <div class="input-field col s7">
            <input id="enter_email" type="email" name="email" required>
            <label for="enter_email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s7">
            <input id="enter_password" type="password" name="password"required>
            <label for="enter_password">Password</label>
          </div>
        </div>
        <% if (signUpError) { %>
          <div class="flashError">
            <%= signUpError %>
          </div>
        <% } %>
        <div class="row">
          <div class="input-field col s2">
            <button class="btn waves-effect waves-light" type="submit">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </form>  
    </div>
  </div>

